# Application
APP_NAME=TalentAI Pro
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production
API_VERSION=v1

# Database
DATABASE_URL=postgresql://talentai:password@localhost:5432/talentai_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=talentai

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== Automation Workers ====================
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ==================== AI Configuration ====================
# OpenAI API for AI features (cover letters, resume analysis, interview prep)
OPENAI_API_KEY=sk-your-openai-api-key-here
AI_MODEL=gpt-4-turbo-preview
# Alternative AI provider
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# AI Feature Toggles
ENABLE_AI_FEATURES=true
ENABLE_COVER_LETTER_GEN=true
ENABLE_RESUME_ANALYSIS=true
ENABLE_INTERVIEW_COACH=true
ENABLE_SALARY_PREDICTOR=true

# AI Usage Limits (per user per month)
AI_MONTHLY_COVER_LETTERS=20
AI_MONTHLY_RESUME_ANALYSES=10
AI_MONTHLY_INTERVIEW_SESSIONS=5

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=talentai-consumers

# External Services
SENDGRID_API_KEY=your-sendgrid-api-key
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret

# Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=talentai-resumes
AWS_REGION=us-east-1

# ML Models
ML_MODEL_PATH=./ml_models/saved_models
ML_BATCH_SIZE=32
ML_INFERENCE_TIMEOUT=5000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
