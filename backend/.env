# ==============================================
# TalentAI Pro - Production Environment Config
# ==============================================

# ==================== Database ====================
DATABASE_URL=postgresql://talentai:talentai123@localhost:5432/talentai_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=talentai_db
DB_USER=talentai
DB_PASSWORD=talentai123

# ==================== Redis ====================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# ==================== Elasticsearch ====================
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# ==================== Security ====================
SECRET_KEY=your-super-secret-key-change-this-in-production-32-chars-minimum
ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== Automation Workers ====================
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ==================== AI Configuration ====================
# OpenAI API for AI features (cover letters, resume analysis, interview prep)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
AI_MODEL=gpt-4-turbo-preview

# Alternative AI provider
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# AI Feature Toggles
ENABLE_AI_FEATURES=true
ENABLE_COVER_LETTER_GEN=true
ENABLE_RESUME_ANALYSIS=true
ENABLE_INTERVIEW_COACH=true
ENABLE_SALARY_PREDICTOR=true

# AI Usage Limits (per user per month)
AI_MONTHLY_COVER_LETTERS=20
AI_MONTHLY_RESUME_ANALYSES=10
AI_MONTHLY_INTERVIEW_SESSIONS=5

# ==================== Kafka ====================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=talentai-consumers

# ==================== External APIs ====================
# LinkedIn OAuth (optional)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@talentai.com

# ==================== ML Models ====================
# spaCy model for resume parsing
SPACY_MODEL=en_core_web_sm

# Model paths (relative to backend directory)
RESUME_PARSER_MODEL_PATH=ml_models/resume_parser
MATCHING_MODEL_PATH=ml_models/matching

# ==================== Application Settings ====================
APP_NAME=TalentAI Pro
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# ==================== Feature Flags ====================
ENABLE_RESUME_PARSING=true
ENABLE_JOB_MATCHING=true
ENABLE_CELERY_TASKS=true
ENABLE_NOTIFICATIONS=true

# ==================== Logging ====================
LOG_LEVEL=INFO
LOG_FILE=logs/talentai.log

# ==================== Performance ====================
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
REDIS_MAX_CONNECTIONS=50

# ==================== Rate Limiting ====================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
